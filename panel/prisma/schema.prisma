generator client {
    provider = "prisma-client"
    output   = "./generated"
}

datasource db {
    provider = "postgresql"
    // url      = env("DATABASE_URL")
}

model Clients {
    id         Int       @id @default(autoincrement())
    createdAt  DateTime  @default(now())
    name       String
    telegramId String
    Configs    Configs[]
}

model Configs {
    id        Int       @id
    createdAt DateTime  @default(now())
    username  String
    vpnKey    Json
    protocol  Protocols
    clientId  Int
    Clients   Clients   @relation(fields: [clientId], references: [id])
}

model Logs {
    id        Int        @id @default(autoincrement())
    createdAt DateTime   @default(now())
    logType   LogTypes
    levelType LevelTypes
    message   String
}

enum Protocols {
    AMNEZIAWG
    XRAY
}

enum LevelTypes {
    INFO
    WARNING
    ERROR
}

enum LogTypes {
    TELEGRAM
    SERVER
    CLIENT
}
